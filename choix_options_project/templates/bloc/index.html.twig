    {% block script %}
        {{ parent() }}
        <script>
            //Form Edit UE
                formAction = '';
                $('.edit-ue-link').click(function (e) {
                    formAction = $(this).attr('href');
                    console.log(formAction);
                    getUePath = formAction.split('/');
                    getUePath[getUePath.length - 1] = 'get';
                    $.ajax({
                        type: "GET",
                        url: getUePath.join('/'),
                        success: function(data)
                        {
                            $('#form-edit-ue #ue_name').attr('value', data.name);
                            $('#form-edit-ue #ue_nbGroup').attr('value', data.nbGroup);
                            $('#form-edit-ue #ue_capacityGroup').attr('value', data.capacityGroup);
                        }
                    });
                });
                $('#form-edit-ue').submit(function (e) {
                    e.preventDefault();
                    $(this).attr('action', formAction);
                    e.currentTarget.submit();

                });
            //Form Edit UE

            //Get data for edit bloc form
                $('.edit-optionBloc').click(function (e) {
                    e.preventDefault();
                    optionBlocId = $(this).attr('class').split(' ').pop().split('-').pop();
                    $.ajax({
                        type: "GET",
                        url: '/admin/parcour/optionBloc/'+ optionBlocId,
                        success: function(data)
                        {
                            $('#edit-optionBloc-ue-modal #option_bloc_name').attr('value', data.name);
                            $('#edit-optionBloc-ue-modal #option_bloc_nbUeToChose').attr('value', data.nbUeToChose);
                            $('#edit-optionBloc-ue-modal #option_bloc_periodChoice').val(data.periodChoice);
                            $('#select-datetime-set-optionbloc').val(data.periodChoice);
                        }
                    });

                });
            //Get data for edit bloc form
            $('.edit-optionBloc').click(function(){
                let classWithId = $(this).parent().attr('class').split(' ').pop().split('-');
                skillBlocId = classWithId[1];
                optionBlocId = classWithId[3];
                formPath = "{{ path('app_option_bloc_edit', { 'id': selectedParcourId, 'skillBloc': 0, 'optionBloc': 0 }) }}".split('/');
                formPath[formPath.length - 2] = optionBlocId;
                formPath[formPath.length - 4] = skillBlocId;
                $("#edit-optionBloc-ue-modal form").attr('action', formPath.join('/'));
            });

            $(".add-ue-to-optionBloc").click(function(){
                $("#form-optionBloc-add").css('display', 'none');
                $("#form-ue-add").css('display', 'block');
                $('#select-type-element').parent().css('display', 'none');
                classWithId = $(this).parent().attr('class').split(' ').pop().split('-');
                let optionBlocId = classWithId[classWithId.length - 1];
                var idSkillBloc = classWithId[classWithId.length - 3]
                var actionValue = "{{ path('app_bloc_new_ue_to_option', { 'id': selectedParcourId, 'skillBloc': 0, 'optionBloc': 0 }) }}";
                var pathArray = actionValue.split('/');
                pathArray[pathArray.length - 5]  = idSkillBloc
                pathArray[pathArray.length - 3]  = optionBlocId
                $('#addUEModal form').first().attr('action', pathArray.join('/'));
            });

            $('#select-type-element').change(function(){
                //Chose UE
                if($("#select-type-element option:selected").attr('value') == 1){
                    $("#form-optionBloc-add").css('display', 'none');
                    $("#form-ue-add").css('display', 'block');

                    $("#select-type-element option[selected='selected']").attr("selected",null);
                    $("#select-type-element option[value='2']").attr('selected', 'selected');
                } else { // Chose Bloc d'option
                    $("#form-optionBloc-add").css('display', 'block');
                    $("#form-ue-add").css('display', 'none');

                    $("#select-type-element option[selected='selected']").attr("selected",null);
                    $("#select-type-element option[value='1']").attr('selected', 'selected');
                }
            });
            $('#select-type-element-double').change(function(){
                //Chose UE
                if($("#select-type-element-double option:selected").attr('value') == 1){
                    $("#form-optionBloc-add").css('display', 'none');
                    $("#form-ue-add").css('display', 'block');

                    $("#select-type-element-double option[selected='selected']").attr("selected",null);
                    $("#select-type-element-double option[value='2']").attr('selected', 'selected');
                } else { // Chose Bloc d'option
                    $("#form-optionBloc-add").css('display', 'block');
                    $("#form-ue-add").css('display', 'none');

                    $("#select-type-element-double option[selected='selected']").attr("selected",null);
                    $("#select-type-element-double option[value='1']").attr('selected', 'selected');
                }
            });
            $(".btn-ue-option-bloc-js").click(function (){
                $('#select-type-element').parent().css('display', 'block');
                var idSkillBloc = $(this).parent().parent().attr('id').split('-').pop();
                var actionValue = "{{ path('app_bloc_new_selected', { 'id': selectedParcourId, 'skillBloc': 0 }) }}";
                var pathArray = actionValue.split('/');
                pathArray[pathArray.length - 3]  = idSkillBloc
                $('#addUEModal form').first().attr('action', pathArray.join('/'));
                pathArray = $('#addUEModal form').last().attr('action').split('/');
                pathArray[pathArray.length - 3]  = idSkillBloc
                $('#addUEModal form').last().attr('action', pathArray.join('/'));
            });

            $("#btn-add-new-ue").click(function () {
                $("#addNewUEModal form").trigger("reset");
            });

            // this is the id of the form
            $("#form-add-new-ue").submit(function(e) {

                e.preventDefault(); // avoid to execute the actual submit of the form.

                var form = $(this);
                var actionUrl = form.attr('action');
                console.log('request sended !');
                $.ajax({
                    type: "POST",
                    url: actionUrl,
                    data: form.serialize(), // serializes the form's elements.
                    success: function(data)
                    {
                        $("#addUEModal").modal('show');
                        $("#addNewUEModal").modal('hide');
                        var options = "";
                        data.forEach(e => {
                            console.log(e);
                            options = $("#select_ue_id").html();
                            $("#select_ue_id").html(options + "<option value='"+e.id+"'>"+e.name+"</option>");

                        });
                    }
                });

            });

            // Get backup for the previous form
                let previousForm = '';
                $('#btn-new-period-new-optionBloc').click(function () {
                    previousForm = 'newOptionBloc';
                });
                $('#btn-new-period-edit-blocOption').click(function () {
                    previousForm = 'editOptionBloc';
                });
            // End Get backup for the previous form
            $("#form-add-new-period").submit(function(e) {

                e.preventDefault(); // avoid to execute the actual submit of the form.

                var form = $(this);
                var actionUrl = form.attr('action');
                console.log('request sended !');
                $.ajax({
                    type: "POST",
                    url: actionUrl,
                    data: form.serialize(), // serializes the form's elements.
                    success: function(data)
                    {
                        $("#addNewPeriod").modal('hide');
                        if(previousForm == 'newOptionBloc') {
                            $("#addUEModal").modal('show');

                        } else if(previousForm == 'editOptionBloc'){
                            $("#edit-optionBloc-ue-modal").modal('show');
                        }
                        var options = "";
                        data.forEach(e => {
                            console.log(e);
                            options = $("#option_bloc_periodChoice").html();
                            $("#option_bloc_periodChoice").html(options + "<option value='"+e.id+"'>Début: " + e.debut + " Fin: " + e.fin + "</option>");
                            $("#select-datetime-set-optionbloc").html($("#option_bloc_periodChoice").html());
                        });
                    }
                });

            });
            const blocs = Object.values(document.getElementsByClassName('edit-bloc'));
            blocs.forEach(link => {
                link.addEventListener('click', event => {
                    event.preventDefault();
                    const id = event.currentTarget.className.split(' ').pop().split('-').pop();
                    const blocRow = document.getElementById('bloc-' + id);
                    const blocName = blocRow.children[0].textContent;
                    const form = document.getElementById('form-edit');
                    //Form Values
                    form.getElementsByTagName('input')[0].value = blocName;
                    let formAction = form.action.split('/');
                    formAction[formAction.length - 2] = id;
                    form.action = formAction.join('/');
                });
            });

            const parcourSelected = document.getElementById('parcour-selected');
            parcourSelected.addEventListener('change', event => {
                let currentUrl = window.location.href.split('/');
                if(currentUrl[currentUrl.length - 2] == 'bloc'){
                    currentUrl.pop();
                }
                currentUrl[currentUrl.length - 2] = event.currentTarget.value;
                location.href = currentUrl.join('/');
            });

            const buttonsNewUe = Object.values(document.getElementsByClassName('new-ue-button'));
            buttonsNewUe.forEach(button => {
                button.addEventListener('click', event => {
                    const id = event.currentTarget.className.split(' ').pop().split('-').pop();
                    const form = document.getElementById('form-ue-add');
                    console.log(form.action);
                    let formAction = form.action.split('/');
                    formAction[formAction.length - 3] = id;
                    form.action = formAction.join('/');
                })
            });

            const linksEditUe = Object.values(document.getElementsByClassName('edit-bloc-ue'));
            linksEditUe.forEach(link => {
                link.addEventListener('click', event => {
                    event.preventDefault();
                    const idUe = event.currentTarget.className.split(' ').pop().split('-').pop();
                    const idBloc = event.currentTarget.className.split(' ').pop().split('-').slice(-3)[0];
                    const ueRow = document.getElementById('ue-' + idUe);
                    const ueName = ueRow.children[0].textContent;
                    const ueNbGroup = ueRow.children[1].textContent;
                    const ueCapacity = ueRow.children[2].textContent;
                    const form = document.getElementById('form-ue-edit');
                    //Form Values
                    form.getElementsByTagName('input')[0].value = ueName;
                    form.getElementsByTagName('input')[1].value = ueNbGroup;
                    form.getElementsByTagName('input')[2].value = ueCapacity;
                    let formAction = form.action.split('/');
                    formAction[formAction.length - 2] = idUe;
                    formAction[formAction.length - 4] = idBloc;
                    form.action = formAction.join('/');
                });
            });
        </script>
