{% extends 'base.html.twig' %}

{% block title %}Blocs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/float-button-style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/select-element-style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/table-subcontent-style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/option-bloc-style.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block sidebar %}
        {{ parent() }}
    {% endblock%}
    <main id="main" class="main" style="position: relative; margin-left: auto">
        <div class="pagetitle">
            <h1>Gestion des blocs et UEs</h1>
            <form style="text-align: center;">
                <select id="parcour-selected" class="text-select">
                    {% for parcour in parcours %}
                        <option value="{{ parcour.id }}" {% if selectedParcourId == parcour.id %} selected {% endif %}>{{ parcour.name }}</option>
                    {% endfor %}
                </select>
            </form>
        </div>

        <section class="section-content">
            <div class="row">
                {% for skillBloc in skillBlocs %}
                    <div class="accordion">
                        <div  class="accordion-item">
                            <div class="accordion-header" id="bloc-{{ skillBloc.id }}">
                                <div>{{ skillBloc.name }}</div>
                                <div style="display: flex; align-items: center; max-width: 210px;">
                                    <button class="btn btn-primary small-btn-darck btn-ue-option-bloc-js" data-bs-toggle="modal" data-bs-target="#addUEModal">
                                        <i class="bi bi-plus-square"></i>
                                    </button>
                                    <a href="#" class="edit-bloc edit-bloc-{{ skillBloc.id }}" data-bs-toggle="modal" data-bs-target="#edit-bloc-modal">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_bloc_delete', {'id': selectedParcourId, 'bloc': skillBloc.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer ce bloc de compétences ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skillBloc.id) }}">
                                        <button class="link-text btn" style="color: #dc2323"><i class="bi bi-trash3-fill"></i></button>
                                    </form>
                                    <button class="accordion-button{% if selectedBloc != skillBloc.id %} collapsed {% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne-{{ skillBloc.id }}" aria-expanded="{% if selectedBloc == skillBloc.id %}true{% else %}false{% endif %}" aria-controls="collapseOne">
                                    </button>
                                </div>
                            </div>
                            <div id="collapseOne-{{ skillBloc.id }}" class="accordion-collapse collapse {% if selectedBloc == skillBloc.id %} show {% endif %}" aria-labelledby="bloc-{{ skillBloc.id }}" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <table class="table ">
                                        <thead>
                                            <tr>
                                                <th>Intitulé</th>
                                                <th>Nombre de groupe</th>
                                                <th>Capacité du groupe</th>
                                                <th>Etudiants</th>
                                                <th>actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for ue in skillBloc.ues %}
                                            <tr>
                                                <td>{{ ue.name }}</td>
                                                <td>{{ ue.nbGroup }}</td>
                                                <td>{{ ue.capacityGroup }}</td>
                                                <td>
                                                    <a href="{{ path('app_students_pursue', {'parcour': selectedParcourId, 'ue': ue.id}) }}">
                                                        Liste suivis
                                                    </a>
                                                </td>
                                                <td>
                                                    <div style="display: flex;justify-content: center; align-items: center;">
                                                        <a href="{{ path('app_ue_edit', {'parcour': selectedParcourId, 'skillBloc': skillBloc.id, 'ue': ue.id}) }}" class="edit-ue-link ue-{{ ue.id }}" data-bs-toggle="modal" data-bs-target="#editUEModal">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <form method="post" action="{{ path('app_skill_bloc_ue_erase', { 'id': selectedParcourId, 'skillBloc': skillBloc.id, 'ue': ue.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet UE du bloc des compétences');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ue.id) }}">
                                                            <button class="link-text btn" style="color: #dc2323"><i class="bi bi-eraser-fill"></i></button>
                                                        </form>
                                                        <form method="post" action="{{ path('app_skill_bloc_ue_delete', { 'id': selectedParcourId, 'skillBloc': skillBloc.id, 'ue': ue.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet UE du bloc des compétences');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ue.id) }}">
                                                            <button class="link-text btn" style="color: #dc2323"><i class="bi bi-trash3-fill"></i></button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">Ajouter des Ues</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                    {% if skillBloc.optionBlocs is not null %}
                                        {% for optionBloc in skillBloc.optionBlocs %}

                                            <div class="optionBloc-container">
                                                <div class="optionBloc-header">
                                                    <div><span>Intitulé</span> <span>{{optionBloc.name}}</span></div>
                                                    <div><span>Nombre Ue à choisir</span> <span>{{ optionBloc.nbUeToChose }}</span></div>
                                                    <div><span>Date début de choix</span> <span>{{ optionBloc.periodChoice.debut|date("d-m-Y H:i") }}</span></div>
                                                    <div><span>Date fin de choix</span><span>{{ optionBloc.periodChoice.fin|date("d-m-Y H:i") }}</span></div>
                                                    <div class="action skillBloc-{{ skillBloc.id }}-optionBloc-{{ optionBloc.id }}">
                                                        <button class="btn btn-primary small-btn-darck add-ue-to-optionBloc" data-bs-toggle="modal" data-bs-target="#addUEModal" type="button">
                                                            <i class="bi bi-plus-square"></i>
                                                        </button>
                                                        <a href="#" class="edit-optionBloc edit-bloc-{{ skillBloc.id }} optionBloc-{{ optionBloc.id }}" data-bs-toggle="modal" data-bs-target="#edit-optionBloc-ue-modal">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <form method="post" action="{{ path('app_option_bloc_delete', { 'id': selectedParcourId, 'skillBloc': skillBloc.id, 'optionBloc': optionBloc.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer ce bloc d\'options');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ optionBloc.id) }}">
                                                            <button class="link-text btn" style="color: #dc2323"><i class="bi bi-trash3-fill"></i></button>
                                                        </form>
                                                    </div>
                                                </div>
                                                <table class="table sub-table">
                                                    <thead>
                                                    <tr>
                                                        <th>Intitulé</th>
                                                        <th>Nombre de groupe</th>
                                                        <th>Capacité du groupe</th>
                                                        <th>Etudiants</th>
                                                        <th>Action</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for ue in optionBloc.ues %}
                                                        <tr>
                                                            <td>{{ ue.name }}</td>
                                                            <td>{{ ue.nbGroup }}</td>
                                                            <td>{{ ue.capacityGroup }}</td>
                                                            <td>
                                                                <a href="{{ path('app_students_pursue', {'parcour': selectedParcourId, 'ue': ue.id}) }}">
                                                                    Liste suivis
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <div style="display: flex;justify-content: center; align-items: center;">
                                                                    <a href="{{ path('app_ue_edit', {'parcour': selectedParcourId, 'skillBloc': skillBloc.id, 'ue': ue.id}) }}" class="edit-ue-link ue-{{ ue.id }}" data-bs-toggle="modal" data-bs-target="#editUEModal">
                                                                        <i class="bi bi-pencil-square"></i>
                                                                    </a>
                                                                    <form method="post" action="{{ path('app_option_bloc_ue_erase', { 'id': selectedParcourId, 'skillBloc': skillBloc.id,'optionBloc': optionBloc.id, 'ue': ue.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir éffacer cet UE du bloc d\'options ');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ue.id) }}">
                                                                        <button class="link-text btn" style="color: #dc2323"><i class="bi bi-eraser-fill"></i></button>
                                                                    </form>
                                                                    <form method="post" action="{{ path('app_option_bloc_ue_delete', { 'id': selectedParcourId, 'skillBloc': skillBloc.id,'optionBloc': optionBloc.id, 'ue': ue.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet UE definitivement');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ue.id) }}">
                                                                        <button class="link-text btn" style="color: #dc2323"><i class="bi bi-trash3-fill"></i></button>
                                                                    </form>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>

                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

